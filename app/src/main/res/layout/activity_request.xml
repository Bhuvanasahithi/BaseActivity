<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".Request">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:id="@+id/btn_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="next"/>
        <Button
                android:id="@+id/btn_array"
                android:layout_below="@id/btn_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="array request"/>
        <Button
                android:id="@+id/btn_object"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_array"
                android:layout_centerHorizontal="true"
                android:text="object request"/>
        <TextView
                android:id="@+id/tv_data"
                android:layout_below="@+id/btn_object"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" />
    </RelativeLayout>
</ScrollView>